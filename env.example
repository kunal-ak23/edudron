# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edudron
DB_USERNAME=edudron
DB_PASSWORD=edudron
DB_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# Service Ports
IDENTITY_SERVICE_PORT=8081
GATEWAY_SERVICE_PORT=8080
CONTENT_SERVICE_PORT=8082
STUDENT_SERVICE_PORT=8083
PAYMENT_SERVICE_PORT=8084

# Service URLs (for gateway routing)
IDENTITY_SERVICE_URL=http://localhost:8081
CONTENT_SERVICE_URL=http://localhost:8082
STUDENT_SERVICE_URL=http://localhost:8083
PAYMENT_SERVICE_URL=http://localhost:8084

# JWT Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# Azure Storage (Optional - for media files)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_CONTAINER_NAME=edudron-media
AZURE_STORAGE_BASE_URL=

# Razorpay Configuration (Optional)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Encryption Keys (Required for Razorpay credential encryption)
# Generate using: openssl rand -base64 32
ENCRYPTION_KEY=your-32-byte-base64-encryption-key-here
ENCRYPTION_KEY_V1=${ENCRYPTION_KEY}
ENCRYPTION_KEY_V2=

# Azure OpenAI Configuration (for AI course generation)
# Note: Endpoint should use .cognitiveservices.azure.com or .openai.azure.com
# To find your deployment name, go to Azure AI Studio -> Deployments section
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
# Common deployment names: gpt-4, gpt-35-turbo, gpt-4o, gpt-4-turbo, gpt-5.2-chat, etc.
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5.2-chat
AZURE_OPENAI_API_VERSION=2025-04-01-preview

