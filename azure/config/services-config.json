{
  "services": {
    "gateway": {
      "port": 8080,
      "cpu": "1.0",
      "memory": "2.0Gi",
      "minReplicas": 2,
      "maxReplicas": 10,
      "ingressExternal": true,
      "healthProbePath": "/actuator/health",
      "environmentVariables": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "GATEWAY_SERVICE_PORT",
          "value": "8080"
        }
      ]
    },
    "identity": {
      "port": 8081,
      "cpu": "0.5",
      "memory": "1.0Gi",
      "minReplicas": 1,
      "maxReplicas": 5,
      "ingressExternal": false,
      "healthProbePath": "/actuator/health",
      "environmentVariables": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "IDENTITY_SERVICE_PORT",
          "value": "8081"
        },
        {
          "name": "JWT_EXPIRATION",
          "value": "86400"
        },
        {
          "name": "JWT_REFRESH_EXPIRATION",
          "value": "604800"
        }
      ]
    },
    "content": {
      "port": 8082,
      "cpu": "0.5",
      "memory": "1.0Gi",
      "minReplicas": 1,
      "maxReplicas": 5,
      "ingressExternal": false,
      "healthProbePath": "/actuator/health",
      "environmentVariables": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "CONTENT_SERVICE_PORT",
          "value": "8082"
        }
      ]
    },
    "student": {
      "port": 8083,
      "cpu": "0.5",
      "memory": "1.0Gi",
      "minReplicas": 1,
      "maxReplicas": 5,
      "ingressExternal": false,
      "healthProbePath": "/actuator/health",
      "environmentVariables": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "STUDENT_SERVICE_PORT",
          "value": "8083"
        }
      ]
    },
    "payment": {
      "port": 8084,
      "cpu": "0.5",
      "memory": "1.0Gi",
      "minReplicas": 1,
      "maxReplicas": 5,
      "ingressExternal": false,
      "healthProbePath": "/actuator/health",
      "environmentVariables": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "PAYMENT_SERVICE_PORT",
          "value": "8084"
        }
      ]
    }
  }
}


