# Development Environment Configuration
# Copy this file to dev.env and update with your values

export RESOURCE_GROUP="edudron-dev-rg"
export LOCATION="centralindia"
export ENVIRONMENT="dev"
export IMAGE_PREFIX="edudron"

# Container Apps Environment
export ENVIRONMENT_NAME="edudron-dev-env"

# Key Vault
export KEY_VAULT_NAME="edudron-dev-kv"
export KEY_VAULT_URL="https://${KEY_VAULT_NAME}.vault.azure.net"

# Docker Hub Container Registry
# Images are stored at: https://hub.docker.com/repositories/<your-username>
# For Docker Hub:
#   - CONTAINER_REGISTRY_SERVER: Use your Docker Hub username (for image naming)
#     The script will automatically convert this to "docker.io" when configuring Azure
#   - This creates images like: <username>/gateway:0.1.0
#   - Azure will use "docker.io" as the registry server for authentication
export CONTAINER_REGISTRY_SERVER="your-docker-hub-username"
export CONTAINER_REGISTRY_USERNAME="your-docker-hub-username"
# Set your Docker Hub access token or password
# Get token from: https://hub.docker.com/settings/security
# Note: Use access token instead of password for better security
export CONTAINER_REGISTRY_PASSWORD="your-docker-hub-token-or-password"

# Azure OpenAI Configuration (for AI course generation in content service)
# Note: Endpoint should use .cognitiveservices.azure.com or .openai.azure.com
# To find your deployment name, go to Azure AI Studio -> Deployments section
export AZURE_OPENAI_ENDPOINT="https://your-resource.cognitiveservices.azure.com/"
export AZURE_OPENAI_API_KEY="your-api-key-here"
# Update this with your actual deployment name from Azure AI Studio
# Common names: gpt-4, gpt-35-turbo, gpt-4o, gpt-4-turbo, gpt-5.2-chat, etc.
export AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4"
export AZURE_OPENAI_API_VERSION="2024-02-15-preview"

# Azure Storage Configuration (for media file uploads)
# Option 1: Use connection string (recommended for development)
# Option 2: Use account name with managed identity (recommended for production)
# The setup-secrets.sh script can auto-detect these from your Azure resources
export AZURE_STORAGE_CONNECTION_STRING=""
export AZURE_STORAGE_ACCOUNT_NAME=""
export AZURE_STORAGE_CONTAINER_NAME="edudron-media"
export AZURE_STORAGE_BASE_URL=""

